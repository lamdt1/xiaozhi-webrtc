# XiaoZhi WebRTC Environment Configuration

# Server Configuration
PORT=51000

# ICE Master Key for credential encryption/decryption
# Generate with: python scripts/manage_ice_credentials.py generate-key
ICE_MASTER_KEY=your_master_key_here

# Cloudflare TURN Server Configuration
# Get credentials from: https://developers.cloudflare.com/turnstile/
CLOUDFLARE_TURN_USERNAME=encrypted:your_encrypted_username_here
CLOUDFLARE_TURN_CREDENTIAL=encrypted:your_encrypted_password_here

# Additional TURN Servers Configuration
# Set the number of additional TURN servers
TURN_SERVER_COUNT=0

# Example additional TURN server (uncomment and configure as needed)
# TURN_SERVER_1_URLS=turn:your-turn-server.com:3478?transport=udp,turn:your-turn-server.com:3478?transport=tcp,turns:your-turn-server.com:5349?transport=tcp
